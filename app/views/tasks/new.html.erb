<h1>Add a new task</h1>

<div class="container">

  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>

    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
    <br>
    <div>
      <%= f.submit%>
    </div>
  <% end %>
</div>
